<!DOCTYPE html>
<html lang="en">
<head>
        <link rel='stylesheet' href='/stylesheets/style2.css' />
        <!-- Google Icon Fonts used by Materialize -->
        <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!-- Materialize CSS Framework -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <link rel="stylesheet" href="stylesheets/style2.css" />
        <!-- JavaScript for Materialize -->
        <script defer src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</head>
<body>
    <div class="container"> 
            <div>
                    <nav>
                      <div>
                        <ul>
                          <li>
                            <% if (user) { %>
                            <a href="/logout"><i class="material-icons left"> </i>Log Out</a>
                            <% } else { %>
                            <a href="/auth/google"><i class="material-icons left"> </i>Google Login</a>
                            <% } %>
                          </li>
                        </ul>
                      </div>
                    </nav>
                  </div>  

<div class="center-align" class="card-panel hoverable">
    <h1 class="card-panel hoverable">Post Info</h1>
    <div class="prev-post" class="card-panel hoverable">
    <%= post.title %>
    <%= post.artist %>
    <%= post.description %>
    <%= post.link %>
</div>
    <h4 class="card-panel hoverable">Comments</h4>
    <div class="card-panel hoverable">
    <% post.comments.forEach(function(c) { %>
        <ul class="card-panel hoverable" class="space">
            <li><%= c.text %></li>
            <li><%= c.commenterName %></li>
        </ul>
    <% }) %>
</div>
</div>
    
    <form action="/posts/<%= post._id %>/comments" method="POST">
        <div class="input-field">
        <input type="text" name="text">
        <input type="submit" value="Submit" class="submit">
        <label for="coment">Comments Here</label>
    </div>
    </form>
    
</div>
</body>
</html>